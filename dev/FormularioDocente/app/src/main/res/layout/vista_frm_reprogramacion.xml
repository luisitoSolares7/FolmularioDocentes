<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/grey_95"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="329dp"
        android:layout_height="348dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/carreraRepro"
                style="@style/EditText.Flat.Grey"
                android:layout_width="37dp"
                android:layout_height="@dimen/spacing_xmlarge"
                android:layout_weight="1"
                android:background="@drawable/edit_text_round_bg_overlay_white"
                android:hint="Carrera"
                android:minHeight="@dimen/spacing_xmlarge"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp" />

            <EditText
                android:id="@+id/fechaRepro"
                style="@style/EditText.Flat.Grey"
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_xmlarge"
                android:layout_weight="1"
                android:background="@drawable/edit_text_round_bg_overlay_white"
                android:drawableEnd="@drawable/ic_arrow_drop"
                android:drawableRight="@drawable/ic_arrow_drop"
                android:editable="false"
                android:focusable="false"
                android:hint="Fecha"
                android:minHeight="@dimen/spacing_xmlarge"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle"
                android:textColor="@android:color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_mlarge"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/materiaRepro"
                style="@style/EditText.Flat.Grey"
                android:layout_width="183dp"
                android:layout_height="@dimen/spacing_xmlarge"
                android:layout_weight="1"
                android:background="@drawable/edit_text_round_bg_overlay_white"
                android:hint="Materia"
                android:minHeight="@dimen/spacing_xmlarge"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp" />


            <EditText
                android:id="@+id/grupoRepro"
                style="@style/EditText.Flat.Grey"
                android:layout_width="80dp"
                android:layout_height="@dimen/spacing_xmlarge"
                android:layout_weight="1"
                android:background="@drawable/edit_text_round_bg_overlay_white"
                android:hint="Grupo"
                android:minHeight="@dimen/spacing_xmlarge"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_mlarge"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/horaRepro"
                style="@style/EditText.Flat.Grey"
                android:layout_width="45dp"
                android:layout_height="@dimen/spacing_xmlarge"
                android:layout_weight="1"
                android:background="@drawable/edit_text_round_bg_overlay_white"
                android:drawableEnd="@drawable/ic_arrow_drop"
                android:drawableRight="@drawable/ic_arrow_drop"
                android:editable="false"
                android:focusable="false"
                android:hint="Hora"
                android:minHeight="@dimen/spacing_xmlarge"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp" />

            <EditText
                android:id="@+id/diasRepro"
                style="@style/EditText.Flat.Grey"
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_xmlarge"
                android:layout_weight="1"
                android:background="@drawable/edit_text_round_bg_overlay_white"
                android:hint="Dias"
                android:minHeight="@dimen/spacing_xmlarge"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_mlarge"
            android:orientation="horizontal">

            <TextView
                style="@style/EditText.Flat.Grey"
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_mxlarge"
                android:layout_weight="1"
                android:text="Modalidad:"
                android:textColor="@android:color/white"
                android:textSize="15dp" />

            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/modalidad_spinner"
                style="@style/EditText.Flat.Grey"
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_mxlarge"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_mlarge"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Objecto de solicitud:"
                android:textColor="@android:color/white"
                android:textSize="15dp" />

            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/obj_solicitud"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                style="@style/EditText.Flat.Grey"
                android:layout_width="25dp"
                android:layout_height="@dimen/spacing_xmlarge"
                android:layout_weight="1"
                android:text="Fecha ejecutada"
                android:textColor="@android:color/white"
                android:textSize="15dp" />

            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp" />

            <EditText
                android:id="@+id/fechaF"
                style="@style/EditText.Flat.Grey"
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_xmlarge"
                android:layout_weight="1"
                android:background="@drawable/edit_text_round_bg_overlay_white"
                android:drawableEnd="@drawable/ic_arrow_drop"
                android:drawableRight="@drawable/ic_arrow_drop"
                android:editable="false"
                android:focusable="false"
                android:hint="Fecha"
                android:minHeight="@dimen/spacing_xmlarge"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>